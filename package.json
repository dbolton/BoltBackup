{
  "name": "BoltBackup",
  "description": "Secure your data with BoltBackup.",
  "version": "0.3.0-alpha2",
  "license": "GPL-3.0+",
  "author": "David Bolton",
  "main": "main.js",
  "build": {
    "appId": "info.davidbolton.boltbackup",
    "files": [
      "index.html",
      "main.js",
      "main-process/",
      "render-process/",
      "style/",
      "build/wordmark.png"
    ],
    "extraFiles": [
      "Binaries/"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "dbolton",
        "repo": "BoltBackup"
      }
    ],
    "win": {
      "requestedExecutionLevel": "highestAvailable"
    }
  },
  "scripts": {
    "start": "./node_modules/.bin/electron .",
    "dev": "./node_modules/.bin/electron . /dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "build -p always"
  },
  "devDependencies": {
    "electron": "^1.7.5",
    "electron-builder": "^19.27.3"
  },
  "dependencies": {
    "electron-log": "^2.2.16",
    "electron-updater": "^3.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dbolton/BoltBackup.git"
  }
}
